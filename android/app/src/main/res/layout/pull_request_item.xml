<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:id="@+id/widgetItemIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/app_widget_description"
        android:padding="6dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:weightSum="20">

        <TextView
            android:id="@+id/widgetItemTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_weight="12"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widgetRepoName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/widgetItemUpdatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:text="@string/app_widget_updated_at"
        android:textSize="8dp" />

</LinearLayout>